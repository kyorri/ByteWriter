@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="rounded custom-background-gradient pt-1 pb-5">
    <h1 class="text-center mt-3">@ViewData["Title"]</h1>
    <div class="row justify-content-center mt-3">
        <div class="col-md-6 col-lg-4">
            <section>
                <form id="account" method="post" class="border p-4 rounded shadow-sm bg-light">
                    <h2 class="h5 text-center mb-4">Welcome back into your safe space!</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-warning btn-lg">Log in</button>
                    </div>
                    <div class="mt-3 text-center">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-black text-decoration-none">Have you forgot your <span class="link-secondary text-decoration-underline">password</span>?</a>
                        </p>
                        <p>
                            Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-secondary">Register!</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="link-secondary">Resend email confirmation!</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

<style>
.custom-background-gradient {
        background: rgb(238,174,202);
        background: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%);
}
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}