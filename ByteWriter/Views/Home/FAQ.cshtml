@{
    ViewData["Title"] = "FAQs";
    <div class="container py-3">
        <div class="row mt-2 mb-4">
            <div class="container-fluid text-center h1">
                Frequently Asked Questions
            </div>
        </div>
        <div class="row my-3 justify-content-center">
            <div class="accordion col-md-8" id="accordionID">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            <div class="m-0">What is <strong>ByteWriter</strong> about?</div>
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne"
                         data-bs-parent="#accordionID">
                        <div class="accordion-body">
                            This is a social oriented blogging platform that combines the creation of personal blogs
                            with the possibility of interacting with your friends.<br>The sky is the limit!
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            How could I join in on the fun on the platform?
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo"
                         data-bs-parent="#accordionID">
                        <div class="accordion-body">
                            Try signing up for your brand new account, and try creating your first blog on the
                            platform. You can also try to engage with other blogs from your friends, on the
                            <strong>Explore</strong> tab.
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingThree">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                            How to create a blog?
                        </button>
                    </h2>
                    <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree"
                         data-bs-parent="#accordionID">
                        <div class="accordion-body">
                            Go to the <strong>Create</strong> tab and try to publish your new ideas to everyone! Go
                            create something you can be proud of!
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingFour">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                            What types of media can I attach to the blogs I publish?
                        </button>
                    </h2>
                    <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour"
                         data-bs-parent="#accordionID">
                        <div class="accordion-body">
                            You can publish a large amount of media, especially text and images.
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingFive">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                            How can I interact with my friends' posts?
                        </button>
                    </h2>
                    <div id="collapseFive" class="accordion-collapse collapse" aria-labelledby="headingFive"
                         data-bs-parent="#accordionID">
                        <div class="accordion-body">
                            For that you'll need to go to the <strong>Explore</strong> > <strong>
                                Friends'
                                Blogs
                            </strong> tab from the navigation bar.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
