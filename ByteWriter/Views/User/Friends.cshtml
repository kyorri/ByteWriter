@model List<User>

@{
    ViewData["Title"] = "Friends";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    @foreach (var friend in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@friend.UserName</h5>
                    <p class="card-text">Email: @friend.Email</p>
                    <a class="btn btn-primary" asp-controller="User" asp-action="Profile" asp-route-username="@friend.UserName">
                        View Profile
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <p>No friends found.</p>
}
