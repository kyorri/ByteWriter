@model List<ByteWriter.Models.Blog>

@{
    ViewData["Title"] = "Friends' Blogs";
}

<div class="container mt-3">
    <h2>@ViewData["Title"]</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No blogs found from your friends.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var blog in Model)
            {
                if (blog != null)
                {
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@blog.BlogTitle</h5>
                                <p class="card-text">@blog.BlogDescription</p>
                                <a href="@Url.Action("Details", "Blog", new { id = blog.BlogID })" class="btn btn-primary">Read More</a>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    }
</div>
