@model ByteWriter.Models.Article

<h2>Delete Article</h2>

<div>
    <h4>Are you sure you want to delete this article?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArticleTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArticleTitle)
        </dd>
        <!-- Display other properties of the article here -->
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.ArticleID" method="post">
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
